<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :due_date %>
      <div class="input-group date" id="datetimepicker" data-date-format="YYYY-MM-DD hh:mm:ss A">
        <%= f.text_field :due_date, class:"form-control" %>
        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
      </div>
    </div>

<script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker();
</script>
    <div class="form-group">
      <%= f.label :label %><br>
      <%= f.text_field :label, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :category %><br>
      <%= f.collection_select :category_id, Category.all.collect, :id, :label, {:include_blank => "Please Select"}, {:class => "form-control"} %>
    </div>
    <div class="actions">
      <%= f.submit class:"btn btn-primary" %>
    </div>
  </div>
</div>


<script type="text/javascript">
  $(function () {
    $('#datetimepicker').datetimepicker();
  });
</script>
<% end %>
