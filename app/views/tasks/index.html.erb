<h1>All Tasks</h1>
<div class="row">
  <div clas="col-md-6">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Label</th>
          <th>Category</th>
          <th>Due date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr class="<%= 'text-danger' if task.due_date.to_time < DateTime.now %>">
            <td><%= task.label %></td>
            <td><%= task.category.label %></td>
            <td><%= task.due_date.to_time.strftime("%A, %B %-d, %Y at %l:%M %p") %></td>
            <td><%= link_to 'Show', task %></td>
            <td><%= link_to 'Edit', edit_task_path(task) %></td>
            <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<hr class="hr-divider">

<%= link_to 'New Task', new_task_path %>
