<p id="notice"><%= notice %></p>
<h2>Category Details</h2>
<div class="row">
	<div class="col-md-6">
		<p>
		  <strong>Label:</strong>
		  <%= @category.label %>
		</p>
		<p>
			<strong>Number of Tasks:</strong>
			<%= @category.tasks.count %>
		</p>
	</div>
	<div class="col-md-6">
		<p>
			<strong>Current Tasks:</strong>
		</p>
		<p>
			<ul>
			<% @category.tasks.each do |task| %>
				<li><strong><%= task.label %> - Due:</strong> <%= task.due_date %></li>
			<% end %>
			</ul>
		</p>
	</div>
</div>

<hr class="hr-divider">


<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
